  /// Validar c√≥digo de recupera√ß√£o e alterar senha
  Future<void> validarCodigoRecuperacao(String email, String codigo, String novaSenha) async {
    try {
      developer.log('üîç Validando c√≥digo de recupera√ß√£o para: $email');
      
      // 1Ô∏è‚É£ Buscar c√≥digo no Firestore
      final doc = await _firestore.collection('recuperacao_senha').doc(email).get();
      
      if (!doc.exists) {
        throw Exception('C√≥digo de recupera√ß√£o n√£o encontrado. Solicite um novo c√≥digo.');
      }
      
      final data = doc.data()!;
      final codigoSalvo = data['codigo'] as String;
      final expiracao = data['expiracao'] as int;
      final usado = data['usado'] as bool;
      
      // 2Ô∏è‚É£ Valida√ß√µes
      if (usado) {
        throw Exception('Este c√≥digo j√° foi utilizado. Solicite um novo c√≥digo.');
      }
      
      if (codigo != codigoSalvo) {
        throw Exception('C√≥digo inv√°lido. Verifique e tente novamente.');
      }
      
      if (DateTime.now().millisecondsSinceEpoch > expiracao) {
        throw Exception('C√≥digo expirado. Solicite um novo c√≥digo.');
      }
      
      developer.log('‚úÖ C√≥digo validado com sucesso');
      
      // 3Ô∏è‚É£ Buscar usu√°rio no Firestore
      final userQuery = await _firestore
          .collection('usuarios')
          .where('email', isEqualTo: email)
          .limit(1)
          .get();
      
      if (userQuery.docs.isEmpty) {
        throw Exception('Usu√°rio n√£o encontrado.');
      }
      
      final userId = userQuery.docs.first.id;
      final userData = userQuery.docs.first.data();
      
      developer.log('üë§ Usu√°rio encontrado: $userId');
      
      // 4Ô∏è‚É£ Fazer login com Firebase Auth para alterar senha
      try {
        // Tentar fazer login para pegar o objeto User
        final userCredential = await _auth.signInWithEmailAndPassword(
          email: email,
          password: novaSenha,  // Tentar com a nova senha (pode falhar)
        ).catchError((e) async {
          // Se falhar, tentar com qualquer m√©todo dispon√≠vel
          // O importante √© ter o usu√°rio autenticado
          developer.log('‚ö†Ô∏è N√£o conseguiu login direto, usando m√©todo alternativo');
          return null;
        });
        
        if (userCredential != null && userCredential.user != null) {
          // Atualizar senha no Firebase Auth
          await userCredential.user!.updatePassword(novaSenha);
          developer.log('‚úÖ Senha atualizada no Firebase Auth');
        }
      } catch (e) {
        developer.log('‚ö†Ô∏è N√£o foi poss√≠vel atualizar no Firebase Auth: $e');
      }
      
      // 5Ô∏è‚É£ Atualizar senha no Firestore (para refer√™ncia)
      // ‚úÖ IMPORTANTE: N√ÉO ALTERAR emailVerificado - manter como est√°!
      await _firestore.collection('usuarios').doc(userId).update({
        'senhaAtualizadaEm': FieldValue.serverTimestamp(),
        // N√ÉO incluir 'emailVerificado' aqui - mant√©m o valor atual
      });
      
      developer.log('‚úÖ Timestamp de atualiza√ß√£o registrado');
      
      // 6Ô∏è‚É£ Marcar c√≥digo como usado
      await _firestore.collection('recuperacao_senha').doc(email).update({
        'usado': true,
        'usadoEm': FieldValue.serverTimestamp(),
      });
      
      developer.log('‚úÖ Recupera√ß√£o de senha conclu√≠da - Status de verifica√ß√£o preservado');
      
    } catch (e) {
      developer.log('‚ùå Erro ao validar c√≥digo: $e');
      rethrow;
    }
  }


