  Future<void> recuperarSenha(String email) async {
    try {
      final usersSnapshot = await _firestore
          .collection('users')
          .where('email', isEqualTo: email)
          .limit(1)
          .get();

      if (usersSnapshot.docs.isEmpty) {
        throw Exception('Email n√£o cadastrado');
      }

      final userDoc = usersSnapshot.docs.first;
      final userData = userDoc.data();
      final nomeCompleto = userData['nomeCompleto'] ?? 'Usu√°rio';

      final codigo = (100000 + (DateTime.now().millisecondsSinceEpoch % 900000)).toString();
      final expiracao = Timestamp.fromDate(DateTime.now().add(const Duration(minutes: 15)));

      await _firestore.collection('users').doc(userDoc.id).update({
        'codigoRecuperacaoSenha': codigo,
        'codigoRecuperacaoSenhaExpiracao': expiracao,
      });

      await _enviarEmailRecuperacaoSenha(email, nomeCompleto, codigo);
      
      print('‚úÖ C√≥digo enviado: $codigo');
    } catch (e) {
      print('‚ùå Erro: $e');
      rethrow;
    }
  }

  Future<bool> validarCodigoRecuperacaoSenha(String email, String codigo) async {
    try {
      final usersSnapshot = await _firestore
          .collection('users')
          .where('email', isEqualTo: email)
          .limit(1)
          .get();

      if (usersSnapshot.docs.isEmpty) return false;

      final userData = usersSnapshot.docs.first.data();
      final codigoSalvo = userData['codigoRecuperacaoSenha'];
      final expiracao = userData['codigoRecuperacaoSenhaExpiracao'] as Timestamp?;

      if (codigoSalvo == null || expiracao == null) return false;
      if (expiracao.toDate().isBefore(DateTime.now())) return false;

      return codigoSalvo == codigo;
    } catch (e) {
      return false;
    }
  }

